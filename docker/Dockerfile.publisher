# build the server binary
FROM golang:1.10.0 AS builder
LABEL stage=intermediate
WORKDIR /go/src/github.com/infobloxopen/atlas-pubsub
COPY . .
RUN CGO_ENABLED=0 GOOS=linux go build -o pubsub-pub ./examples/hello/publisher


# run the server binary
FROM alpine:latest AS runner
WORKDIR /usr/local/bin

COPY --from=builder /go/src/github.com/infobloxopen/atlas-pubsub/pubsub-pub .

# Allows to verify certificates
RUN apk update --no-cache && apk add --no-cache ca-certificates

ENTRYPOINT ["pubsub-pub"]
